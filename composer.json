{
    "name": "uptowndev/helloworld",
    "version" : "0.10",
    "type": "library",
    "description": ":This is a test package created to learn about laravel package development. It will be deleted",
    "keywords": [
        "UptownDev",
        "HelloWorld"
    ],
    "homepage": "https://github.com/developeruptown/HelloWorld",
    "license": "MIT",
    "authors": [
        {
            "name": ":Saad Siddiqui",
            "email": "developeruptown@gmail.com",
            "homepage": "https://github.com/developeruptown/",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "~5.6|~7.0",
        "illuminate/support": "~5.1"
    },
    "require-dev": {
        "phpunit/phpunit" : "~4.0||~5.0||~6.0",
        "squizlabs/php_codesniffer": "^2.3"
    },
    "autoload": {
        "psr-4": {
            "UptownDev\\HelloWorld\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "UptownDev\\HelloWorld\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests",
        "fix-style": "phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests"
    },
     
    "config": {
        "sort-packages": true
    }
}
